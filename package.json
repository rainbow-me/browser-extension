    "eslint-config-prettier": "8.5.0",
    "eslint-config-rainbow": "4.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-prettier": "4.2.1",
    "file-loader": "6.2.0",
    "geckodriver": "3.1.0",
    "globby": "11.0.4",
    "happy-dom": "7.5.13",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "jest": "29.2.0",
